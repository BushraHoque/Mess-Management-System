<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:background="#ffffff"
    >

    <TextView
        android:id="@+id/tvReportName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meal Count"
                android:textSize="14sp"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/tvReportMealCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meal Bill"
                android:textSize="14sp"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/tvReportMealBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="৳0.00"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"  />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Paid"
                android:textSize="14sp"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/tvReportAmountPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="৳0.00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#449D48" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Balance"
                android:textSize="14sp"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/tvReportDueBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="৳0.00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#F44336" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
